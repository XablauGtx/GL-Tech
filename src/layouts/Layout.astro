---
// src/layouts/Layout.astro

import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { ViewTransitions } from 'astro:transitions';
import SEO from '../components/SEO.astro'; // <-- Importa nosso novo componente

interface Props {
  title?: string;
  description?: string;
}

const {
  title = 'GL Technology - Soluções Digitais Completas',
  description = 'Da infraestrutura à interface, criamos soluções digitais robustas e sob medida para o seu sucesso.'
} = Astro.props;
---

<!doctype html>
<html lang="pt-br">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" type="image/png" href="/favicon-96x96.png" sizes="96x96" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="shortcut icon" href="/favicon.ico" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <meta name="apple-mobile-web-app-title" content="GL Tech" />
    <link rel="manifest" href="/site.webmanifest" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <SEO title={title} description={description} />
    <title>{title}</title>
    <meta name="description" content={description} />

    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:image" content="/og-image.png" />
    <meta property="og:url" content="https://gl-tech-alpha.vercel.app" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content="/og-image.png" />

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;700&display=swap" rel="stylesheet">
  </head>
  <body>
    <ViewTransitions />

    <div class="site-container">
      <Header />
      <main class="conteudo-principal">
        <slot />
      </main>
    </div>

    <Footer />
  </body>
</html>

<style is:global>
  :root {
    --cor-fundo: #191c23;
    --cor-fundo-secundario: #1e222a;
    --cor-texto-principal: #e2e8f0;
    --cor-texto-secundario: #94a3b8;
    --cor-destaque: #00c8ff;
  }

  body {
    background-color: var(--cor-fundo);
    color: var(--cor-texto-principal);
    font-family: 'Poppins', sans-serif;
    margin: 0;

    background-image: linear-gradient(rgba(20, 23, 29, 0.9), rgba(20, 23, 29, 0.9)), url('/background.png');
    background-size: cover;
    background-position: center center;
    background-attachment: fixed;
    background-repeat: no-repeat;
  }

  .site-container {
    display: flex;
    flex-direction: column;
    min-height: 100vh;
    max-width: 1100px;
    margin: 0 auto;
    padding: 0 40px;
  }

  .conteudo-principal {
    flex-grow: 1;
    padding-bottom: 40px;
  }
</style>
