---
// src/pages/index.astro - VERSÃO REATORADA

import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
import Sobre from '../components/Sobre.astro';
import EquipeHomepage from '../components/EquipeHomepage.astro';
import DestaqueDinamico from '../components/DestaqueDinamico.astro';
---

<Layout>
  <Hero
    titulo="GL Technology"
    descricao="Nós somos a parceira de tecnologia que sua empresa precisa para decolar no cenário digital. Da arquitetura de infraestrutura robusta ao desenvolvimento de aplicativos de alta performance. Entregamos um ecossistema digital completo e sob medida para o seu sucesso."
    textoBotao="Conheça Nossos Projetos"
    linkBotao="/projetos"
    transition:animate="fade"
  >
    <DestaqueDinamico transition:animate="fade" />
  </Hero>

  <hr class="divisor" />

  <section transition:animate="fade">
    <EquipeHomepage />
  </section>

  <section transition:animate="fade">
  </section>

</Layout>

<style>
  /* Como o layout do Hero foi movido para dentro do próprio componente,
    o CSS aqui fica muito mais simples!
  */
  .divisor {
    border: none;
    border-top: 1px solid #374151;
    margin: 60px 0; /* Aumentei um pouco a margem para mais respiro */
  }

  /* Adicionando um espaçamento entre as seções para não ficarem coladas */
  section:not(:first-of-type) {
    margin-top: 60px;
  }
</style>