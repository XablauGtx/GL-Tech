---
// src/components/Skills.astro - VERSÃO MELHORADA (CATEGORIZADA)
import { Icon } from 'astro-icon/components';
// 1. Importamos os dados centralizados
import { TECH_STACK } from '../data/techStack.ts';
---

<section class="skills-section">
  <h2 class="titulo-secao">Tecnologias que Dominamos</h2>
 
  {TECH_STACK.map(grupo => (
  <div class="categoria-bloco">
   <h3 class="categoria-titulo">{grupo.categoria}</h3>
   <div class="skills-grid">
    
        {grupo.skills.map(skill => (
     <div class="skill-card">
      <Icon name={skill.icone} class="skill-icone" />
      <span class="skill-nome">{skill.nome}</span>
     </div>
    ))}
   </div>
  </div>
 ))}

</section>

<style>
 .skills-section {
  margin-bottom: 80px;
 }
 .titulo-secao {
  display: inline-flex;
  align-items: center;
  gap: 12px;
  font-size: 1.5rem;
  color: var(--cor-texto-principal);
  margin-bottom: 32px;
 }
 .titulo-secao::before {
  content: '';
  display: block;
  width: 10px;
  height: 10px;
  background-color: var(--cor-destaque);
 }

 /* NOVO: Bloco para cada categoria */
 .categoria-bloco {
  margin-bottom: 48px; /* Espaço entre as categorias */
 }
 
 /* NOVO: Título da categoria */
 .categoria-titulo {
  font-size: 1.1rem;
  font-weight: 500;
  color: var(--cor-texto-secundario);
  border-bottom: 1px solid var(--cor-borda);
  padding-bottom: 8px;
  margin-bottom: 32px;
 }

 .skills-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(130px, 1fr));
  gap: 40px 30px;
 }

 .skill-card {
  text-align: center;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16px;
  transition: transform 0.3s ease;
 }

 .skill-card:hover {
  transform: scale(1.1);
  /*     DICA OPCIONAL: Se achar o 'scale' muito "saltitante", 
    troque por 'transform: translateY(-4px);'. 
    Dá um efeito de "flutuar" mais sutil.
  */
 }
 
 .skill-icone {
  font-size: 3.5rem;
  color: var(--cor-texto-secundario);
  transition: color 0.3s ease;
 }

 .skill-card:hover .skill-icone {
  color: var(--cor-destaque);
 }

 .skill-nome {
  font-size: 0.9rem;
  font-weight: 500;
  color: var(--cor-texto-principal);
 }
</style>