---
// src/components/Skills.astro - DESIGN RECOMENDADO "TECH STACK"
import { Icon } from 'astro-icon/components';

// Removemos a propriedade 'nivel'. Agora é apenas uma lista de tecnologias.
const skills = [
  { nome: 'JavaScript', icone: 'simple-icons:javascript' },
  { nome: 'TypeScript', icone: 'simple-icons:typescript' },
  { nome: 'Vue.js', icone: 'simple-icons:vuedotjs' },
  { nome: 'React', icone: 'simple-icons:react' },
  { nome: 'Astro', icone: 'simple-icons:astro' },
  { nome: 'Node.js', icone: 'simple-icons:nodedotjs' },
  { nome: 'PostgreSQL', icone: 'simple-icons:postgresql' },
  { nome: 'Figma', icone: 'simple-icons:figma' },
  { nome: 'CSS3', icone: 'simple-icons:css3' },
  { nome: 'HTML5', icone: 'simple-icons:html5' },
];
---
<section class="skills-section">
  <h2 class="titulo-secao">Nossas Ferramentas</h2>
  <div class="skills-grid">
    {skills.map(skill => (
      <div class="skill-card">
        <Icon name={skill.icone} class="skill-icone" />
        <span class="skill-nome">{skill.nome}</span>
      </div>
    ))}
  </div>
</section>

<style>
  .skills-section {
    margin-bottom: 80px;
  }
  .titulo-secao {
    display: inline-flex;
    align-items: center;
    gap: 12px;
    font-size: 1.5rem;
    color: var(--cor-texto-principal);
    margin-bottom: 32px;
  }
  .titulo-secao::before {
    content: '';
    display: block;
    width: 10px;
    height: 10px;
    background-color: var(--cor-destaque);
  }

  .skills-grid {
    display: grid;
    /* Aumentei um pouco o minmax para dar mais espaço */
    grid-template-columns: repeat(auto-fit, minmax(130px, 1fr));
    gap: 40px 30px; /* Mais espaço vertical */
  }

  .skill-card {
    text-align: center;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 16px; /* Espaço entre o ícone e o nome */
    transition: transform 0.3s ease;
  }

  .skill-card:hover {
    transform: scale(1.1);
  }
  
  .skill-icone {
    font-size: 3.5rem; /* Ícones um pouco maiores */
    color: var(--cor-texto-secundario);
    transition: color 0.3s ease;
  }

  .skill-card:hover .skill-icone {
    color: var(--cor-destaque); /* Muda a cor do ícone no hover */
  }

  .skill-nome {
    font-size: 0.9rem;
    font-weight: 500;
    color: var(--cor-texto-principal);
  }
</style>