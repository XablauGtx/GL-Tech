---
import { SEO as AstroSEO } from "astro-seo";

interface Props {
  title?: string;
  description?: string;
  image?: string;
}

const {
  title = "GL Technology - Soluções Digitais Completas",
  description = "Da infraestrutura à interface, criamos soluções digitais robustas e sob medida para o seu sucesso.",
  image = "/og-image.png", 
} = Astro.props;

const imageUrl = new URL(image, Astro.site).href;
---

<AstroSEO
  title={title}
  description={description}
  canonical={new URL(Astro.url.pathname, Astro.site).href}
  openGraph={{
    basic: {
      title: title,
      type: "website",
      image: imageUrl,
      url: new URL(Astro.url.pathname, Astro.site).href,
    },
    image: {
      alt: `Imagem de destaque para ${title}`,
    },
    optional: {
      description: description,
      siteName: "GL Technology",
    }
  }}
  twitter={{
    card: "summary_large_image",
    title: title,
    description: description,
    image: imageUrl,
    imageAlt: `Imagem de destaque para ${title}`,
  }}
/>